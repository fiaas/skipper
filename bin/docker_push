#!/usr/bin/env bash

set -evuo pipefail

IMAGE_NAME=${TRAVIS_REPO_SLUG:-${USER}/skipper}
DOCKER_IMAGE="${IMAGE_NAME}:${VERSION/+/-}"

if [[ "${CI:-}" == "true" ]]; then
  # Run multi-arch build and push it
  docker buildx build --pull \
    --tag "${IMAGE_NAME}:latest" \
    --tag "${DOCKER_IMAGE}" \
    --platform=linux/amd64 \
    --push .
    echo "Pushed image ${DOCKER_IMAGE}"
fi
